<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="227.0" prefWidth="300" spacing="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="qcha.calculator.controller.CalculatorController">
    <fx:define>
        <Font fx:id="FONT" size="18" />
    </fx:define>

    <StackPane>
        <Rectangle fill="TRANSPARENT" height="50" stroke="GRAY" width="270.0" />
        <Text fx:id="output" />
        <Text fx:id="hint" StackPane.alignment="TOP_RIGHT">
         <StackPane.margin>
            <Insets right="80.0" />
         </StackPane.margin></Text>
    </StackPane>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#processNumpad" prefWidth="60.0" text="7" />
        <Button onAction="#processNumpad" prefWidth="60.0" text="8" />
        <Button onAction="#processNumpad" prefWidth="60.0" text="9" />
        <Button onAction="#processOperator" prefWidth="60.0" text="/" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#processNumpad" prefWidth="60.0" text="4" />
        <Button onAction="#processNumpad" prefWidth="60.0" text="5" />
        <Button onAction="#processNumpad" prefWidth="60.0" text="6" />
        <Button onAction="#processOperator" prefWidth="60.0" text="*" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#processNumpad" prefWidth="60.0" text="1" />
        <Button onAction="#processNumpad" prefWidth="60.0" text="2" />
        <Button onAction="#processNumpad" prefWidth="60.0" text="3" />
        <Button onAction="#processOperator" prefWidth="60.0" text="-" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#processNumpad" prefWidth="130.0" text="0" />
        <Button onAction="#processOperator" prefWidth="60.0" text="=" />
        <Button onAction="#processOperator" prefWidth="60.0" text="+" />
    </HBox>
</VBox>
